{
  "projectId": "",
  "teamId": "",
  "name": "greenflow-landing",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "vite",
  "public": false,
  "outputDirectory": "dist",
  "regions": ["iad1"],
  "functions": {
    "api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "env": [
    {
      "key": "VITE_API_BASE_URL",
      "value": "https://staging-api.greenflow.dev/api/v2",
      "target": ["staging"]
    },
    {
      "key": "VITE_API_BASE_URL",
      "value": "https://api.greenflow.dev/api/v2",
      "target": ["production"]
    },
    {
      "key": "VITE_GA_MEASUREMENT_ID",
      "value": "G-STAGING_MEASUREMENT_ID",
      "target": ["staging"]
    },
    {
      "key": "VITE_GA_MEASUREMENT_ID",
      "value": "G-PRODUCTION_MEASUREMENT_ID",
      "target": ["production"]
    },
    {
      "key": "VITE_SENTRY_DSN",
      "value": "https://staging@sentry.io/staging-project-id",
      "target": ["staging"]
    },
    {
      "key": "VITE_SENTRY_DSN",
      "value": "https://production@sentry.io/production-project-id",
      "target": ["production"]
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false,
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "rewrites": [
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/:path*",
      "headers": [
        {
          "key": "cache-control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/:path*",
      "headers": [
        {
          "key": "cache-control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node"
    }
  ]
}
