# GreenFlow 스테이징 환경 설정
# 배포 날짜: 2026-02-04

# 환경 식별
NODE_ENV=staging
APP_ENV=staging

# API 설정
API_PORT=3000
API_PREFIX=/api/v2
API_BASE_URL=https://staging-api.greenflow.dev/api/v2

# 프론트엔드
VITE_API_BASE_URL=https://staging-api.greenflow.dev/api/v2
FRONTEND_URL=https://staging.greenflow.dev

# 데이터베이스 (AWS RDS 또는 GCP Cloud SQL)
DATABASE_HOST=staging-db.example.com
DATABASE_PORT=5432
DATABASE_NAME=glec_staging
DATABASE_USER=glec_staging_user
DATABASE_PASSWORD=CHANGE_IN_PRODUCTION
DATABASE_URL=postgres://glec_staging_user:CHANGE_IN_PRODUCTION@staging-db.example.com:5432/glec_staging

# Redis (AWS ElastiCache 또는 GCP Memorystore)
REDIS_HOST=staging-redis.example.com
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_IN_PRODUCTION
REDIS_URL=redis://:CHANGE_IN_PRODUCTION@staging-redis.example.com:6379

# AWS / LocalStack
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=STAGING_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=STAGING_SECRET_KEY
AWS_ENDPOINT_URL=https://s3.amazonaws.com
LOCALSTACK_ENABLED=false

# JWT
JWT_SECRET=staging-jwt-secret-key-change-immediately
JWT_EXPIRY=24h

# CORS
CORS_ORIGIN=https://staging.greenflow.dev

# 로깅
LOG_LEVEL=debug

# 모니터링
SENTRY_DSN=https://your-sentry-key@sentry.io/your-project-id
SENTRY_ENVIRONMENT=staging
SENTRY_TRACE_SAMPLE_RATE=0.1

# Google Analytics
VITE_GA_MEASUREMENT_ID=G-STAGING_MEASUREMENT_ID

# 이메일 (SendGrid, AWS SES 등)
SENDGRID_API_KEY=SG.STAGING_KEY
EMAIL_FROM=noreply@staging.greenflow.dev

# 기타
DEBUG=false
